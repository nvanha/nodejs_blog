<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card">
          <a href="courses/{{slug}}">
            <img src={{image}} class="card-img-top" alt={{name}} />
          </a>
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <a href="courses/{{slug}}" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>