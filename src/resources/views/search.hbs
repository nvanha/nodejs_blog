<div class="mt-3 mb-3 search-form">
  <form method="post">
    <div class="form-group">
      <label for="search-input">Từ khóa</label>
      <input type="text" name="keyword" class="form-control" id="search-input" placeholder="Nhập từ khóa" />
    </div>

    <div class="form-group">
      <label for="gender-input">Giới tính</label>
      <select name="gender" class="form-control" id="gender-input">
        <option value="">-- Chọn giới tính --</option>
        <option value="male">Nam</option>
        <option value="female">Nữ</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">TÌm kiếm</button>
  </form>
</div>